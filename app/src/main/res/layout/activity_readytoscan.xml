<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/ready_but_return"
            android:layout_width="148px"
            android:layout_height="82px"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/return_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


        <Button
            android:id="@+id/ready_but_home"
            android:layout_width="148px"
            android:layout_height="82px"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="208px"
            android:background="@mipmap/home_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/ready_but_startscan"
            android:layout_width="252px"
            android:layout_height="82px"
            android:layout_marginBottom="5px"
            android:layout_marginRight="30px"
            android:background="@mipmap/start_scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>