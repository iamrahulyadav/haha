<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dp_323"
        android:layout_height="@dimen/dp_174"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/close_bg">

        <ImageView
            android:id="@+id/wifi_image1"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_36"
            android:background="@mipmap/wifi_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/wifi_edit_name"
            android:layout_width="@dimen/dp_225"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@null"
            android:hint="请输入WI-FI名称"
            android:maxLines="1"
            android:textColor="@color/text_color_bf"
            android:textColorHint="@color/text_color_bf"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/wifi_image1"
            app:layout_constraintLeft_toRightOf="@+id/wifi_image1"
            app:layout_constraintTop_toTopOf="@+id/wifi_image1" />

        <View
            android:id="@+id/login_view"
            android:layout_width="@dimen/dp_225"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/text_color_bf"
            app:layout_constraintLeft_toRightOf="@+id/wifi_image1"
            app:layout_constraintTop_toBottomOf="@+id/wifi_edit_name" />


        <ImageView
            android:id="@+id/wifi_image2"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@mipmap/verification_code"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wifi_image1" />


        <EditText
            android:id="@+id/wifi_edit_pwd"
            android:layout_width="@dimen/dp_225"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/text_color_bf"
            android:textColorHint="@color/text_color_bf"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/wifi_image2"
            app:layout_constraintLeft_toRightOf="@+id/wifi_image2"
            app:layout_constraintTop_toTopOf="@+id/wifi_image2" />

        <View
            android:id="@+id/wifi_view2"
            android:layout_width="@dimen/dp_225"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/text_color_bf"
            app:layout_constraintLeft_toRightOf="@+id/wifi_image2"
            app:layout_constraintTop_toBottomOf="@+id/wifi_edit_pwd" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_27"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wifi_image2"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/wifi_but_diss"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_23"
                android:background="@drawable/button_normals"
                android:text="取消"
                android:textColor="@color/detail_but_text_cor"
                android:textSize="@dimen/dp_11" />

            <Button
                android:id="@+id/wifi_but_confirm"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_22"
                android:background="@drawable/button_disabled"
                android:text="确认"
                android:textColor="@color/black80"
                android:textSize="@dimen/dp_11" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>