<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="88px"
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:text="测量数据"
        android:textColor="@color/text_color_c1"
        android:textSize="30px" />

    <LinearLayout
        android:id="@+id/item_lin2"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:background="@color/bg_color">

        <TextView
            android:layout_width="975px"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:text="单位：毫米"
            android:textColor="@color/text_color_c1"
            android:textSize="24px" />


        <TextView
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="左脚"
            android:textColor="@color/text_color_c1"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="右脚"
            android:textColor="@color/text_color_c1"
            android:textSize="24px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_lin"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_text_number"
            android:layout_width="70px"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_c1"
            android:textSize="24px" />

        <TextView
            android:id="@+id/item_text_name"
            android:layout_width="900px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_c1"
            android:textSize="24px" />


        <TextView
            android:id="@+id/item_text_left"
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_c1"
            android:textSize="24px" />

        <TextView
            android:id="@+id/item_text_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_c1"
            android:textSize="24px" />
    </LinearLayout>

</LinearLayout>