<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black50">

    <ImageView
        android:id="@+id/login_image1"
        android:layout_width="22px"
        android:layout_height="31px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="110px"
        android:background="@mipmap/scan_cod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_edit_number"
        android:layout_width="530px"
        android:layout_height="31px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="80px"
        android:background="@null"
        android:hint="请输入编号"
        android:maxLines="1"
        android:textColor="@color/text_color_bf"
        android:textColorHint="@color/text_color_bf"
        android:textSize="@dimen/text_size_26"
        app:layout_constraintBottom_toBottomOf="@+id/login_image1"
        app:layout_constraintLeft_toRightOf="@+id/login_image1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_image1" />

    <View
        android:layout_width="530px"
        android:layout_height="1px"
        android:background="@color/text_color_bf"
        android:layout_marginLeft="25px"
        android:layout_marginTop="14px"
        app:layout_constraintLeft_toRightOf="@+id/login_image1"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_number"/>

    <ImageView
        android:id="@+id/login_image2"
        android:layout_width="22px"
        android:layout_height="31px"
        android:layout_marginTop="65px"
        android:background="@mipmap/phone_bg"
        app:layout_constraintLeft_toLeftOf="@+id/login_image1"
        app:layout_constraintTop_toBottomOf="@+id/login_image1" />

    <EditText
        android:id="@+id/login_edit_phone"
        android:layout_width="330px"
        android:layout_height="31px"
        android:layout_marginLeft="25px"
        android:background="@null"
        android:hint="请输入上传手机号"
        android:maxLines="1"
        android:textColor="@color/text_color_bf"
        android:textColorHint="@color/text_color_bf"
        android:textSize="@dimen/text_size_26"
        app:layout_constraintBottom_toBottomOf="@+id/login_image2"
        app:layout_constraintLeft_toRightOf="@+id/login_image2"
        app:layout_constraintTop_toTopOf="@+id/login_image2" />

    <TextView
        android:id="@+id/login_text_code"
        android:layout_width="180px"
        android:layout_height="31px"
        android:gravity="center"
        android:text="获取验证码"
        android:layout_marginLeft="20px"
        android:textColor="@color/bg_color"
        app:layout_constraintBottom_toBottomOf="@+id/login_edit_phone"
        app:layout_constraintLeft_toRightOf="@+id/login_edit_phone"
        app:layout_constraintTop_toTopOf="@+id/login_edit_phone" />

    <View
        android:id="@+id/login_view"
        android:layout_width="330px"
        android:layout_height="1px"
        android:background="@color/text_color_bf"
        android:layout_marginLeft="25px"
        android:layout_marginTop="14px"
        app:layout_constraintLeft_toRightOf="@+id/login_image2"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_phone"/>

    <View
        android:layout_width="180px"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toBottomOf="@+id/login_view"
        app:layout_constraintLeft_toRightOf="@+id/login_view"
        app:layout_constraintTop_toTopOf="@+id/login_view"/>

    <ImageView
        android:id="@+id/login_image3"
        android:layout_width="22px"
        android:layout_height="31px"
        android:layout_marginBottom="115px"
        android:layout_marginTop="65px"
        android:background="@mipmap/verification_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/login_image2"
        app:layout_constraintTop_toBottomOf="@+id/login_image2" />




    <EditText
        android:id="@+id/login_edit_code"
        android:layout_width="330px"
        android:layout_height="31px"
        android:layout_marginLeft="25px"
        android:background="@null"
        android:hint="请输入验证码"
        android:maxLines="1"
        android:textColor="@color/text_color_bf"
        android:textColorHint="@color/text_color_bf"
        android:textSize="@dimen/text_size_26"
        app:layout_constraintBottom_toBottomOf="@+id/login_image3"
        app:layout_constraintLeft_toRightOf="@+id/login_image3"
        app:layout_constraintTop_toTopOf="@+id/login_image3" />

    <Button
        android:id="@+id/login_but_submit"
        android:layout_width="200px"
        android:layout_height="46px"
        android:gravity="center"
        android:text="确定"
        android:layout_marginLeft="20px"
        android:textColor="@color/bg_color"
        android:background="@color/ban_transparent_bg"
        app:layout_constraintBottom_toBottomOf="@+id/login_edit_code"
        app:layout_constraintLeft_toRightOf="@+id/login_edit_code"
        app:layout_constraintTop_toTopOf="@+id/login_edit_code" />
    <View
        android:id="@+id/login_view2"
        android:layout_width="330px"
        android:layout_height="1px"
        android:background="@color/text_color_bf"
        android:layout_marginLeft="25px"
        android:layout_marginTop="14px"
        app:layout_constraintLeft_toRightOf="@+id/login_image3"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_code"/>

