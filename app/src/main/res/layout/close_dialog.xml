<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_273"
        android:layout_height="@dimen/dp_134"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/close_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_25"
            android:text="是否关闭扫描仪"
            android:layout_marginTop="@dimen/dp_25"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_25">

            <Button
                android:id="@+id/close_but_diss"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_23"
                android:background="@drawable/button_normals"
                android:text="取消"
                android:textColor="@color/detail_but_text_cor"
                android:textSize="@dimen/dp_11" />

            <Button
                android:id="@+id/close_but_confirm"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_22"
                android:background="@drawable/button_disabled"
                android:text="确认"
                android:textColor="@color/black80"
                android:textSize="@dimen/dp_11" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>