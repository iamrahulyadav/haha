<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="300px"
        android:height="300px">
        <shape>
            <gradient
                android:endColor="@color/black"
                android:startColor="@color/black" />
            <corners android:radius="20px" />
        </shape>
    </item>
    <item
        android:width="200px"
        android:height="130px"
        android:gravity="center">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#60ff0000"
                android:centerX="0.2"
                android:centerY="0.9"
                android:endColor="#ffff0000"
                android:startColor="#60ff0000"
                android:type="linear" />
            <corners android:radius="20px" />
        </shape>
    </item>
    <item
        android:width="180px"
        android:height="110px"
        android:gravity="center">
        <shape>
            <gradient
                android:endColor="@color/white"
                android:startColor="@color/white" />
            <corners android:radius="20px" />
        </shape>
    </item>


</layer-list>